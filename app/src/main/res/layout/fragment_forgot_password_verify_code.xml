<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.fragment.login.ForgotPasswordVerifyCodeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_blue_1"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewVerifyCode"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/verify_email" />

                <TextView
                    android:id="@+id/textViewVerifyYourCodeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/roboto_flex"
                    android:text="@string/verify_your_code"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewVeriyEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/roboto_flex"
                    android:text="@string/verify_your_code_sent_email"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextVerifyEmail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/roboto_flex"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextVerifyEmail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:fontFamily="@font/roboto_flex"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextVerifyEmail3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:fontFamily="@font/roboto_flex"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextVerifyEmail4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:fontFamily="@font/roboto_flex"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonVerifyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/dark_green"
                    android:text="@string/verify"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>