<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#8C9EFF"
    app:cardCornerRadius="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_1"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewAlertChangePassword"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAlertChangePasswordCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="@font/roboto_flex"
                android:text="@string/current_password"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextAlertChangePasswordCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:ems="10"
                android:fontFamily="@font/roboto_flex"
                android:hint="@string/current_password"
                android:inputType="text|textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAlertChangePasswordNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="@font/roboto_flex"
                android:text="@string/new_password"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextAlertChangePasswordNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:ems="10"
                android:fontFamily="@font/roboto_flex"
                android:hint="@string/new_password"
                android:inputType="text|textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAlertChangePasswordConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="@font/roboto_flex"
                android:text="@string/new_password_confirm"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextAlertChangePasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:ems="10"
                android:fontFamily="@font/roboto_flex"
                android:hint="@string/new_password_confirm"
                android:inputType="text|textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonChangePasswordOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/dark_green"
            android:text="@string/change_password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_flex" />
    </LinearLayout>

</androidx.cardview.widget.CardView>